package assignment;

class Car
{
	String brand;
	String model;
	int year;
	public Car() {
	}
    Car(String brand) {
    	this.brand = brand;
    	this.model ="Standard";
    	this.year = 2025;
    }
    
    Car(String brand, String model) {
        this.brand = brand;
        this.model = model;
        this.year = 2021;
    }
    
    Car(String brand, String model, int year) {
        this.brand = brand;
        this.model = model;
        this.year = year;
    }
    
    void displayInfo() {
        System.out.println("Brand: " + brand + ", Model: " + model + ", Year: " + year);
    }
    
 public class Lab_4b {}

    public static void main(String[] args) {
        Car car1 = new Car();                          
        Car car2 = new Car("Toyota");                    
        Car car3 = new Car("Honda", "Civic");            
        Car car4 = new Car("Ford", "Mustang", 2023);     

        car1.displayInfo();
        car2.displayInfo();
        car3.displayInfo();
        car4.displayInfo();

 }
}
